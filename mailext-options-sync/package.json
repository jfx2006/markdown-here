{
	"name": "@jfx2006/mailext-options-sync",
	"version": "4.0.2",
	"description": "Helps you manage and autosave your extension's options.",
	"keywords": [
		"extension",
		"mailext",
		"thunderbird",
		"options",
		"sync",
		"thunderbird",
		"webext"
	],
	"private": true,
	"repository": "fregante/webext-options-sync",
	"license": "MIT",
	"author": "JFX",
	"contributors": [
		"Federico Brigante <me@fregante.com> (https://fregante.com)"
	],
	"type": "module",
	"main": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "rollup -c",
		"test": "run-p build ava xo",
		"watch": "rollup -c --watch",
		"ava": "ava",
		"xo": "xo"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
    "ignores": [
      "mail-ext-types.d.ts",
      "mailext-options-sync.js"
    ],
		"rules": {
			"@typescript-eslint/no-unsafe-return": "off",
			"@typescript-eslint/no-dynamic-delete": "off",
			"@typescript-eslint/no-empty-function": "off",
      "no-await-in-loop": "off"
		}
	},
	"ava": {
		"require": [
			"./test/_env.js"
		]
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"@rollup/plugin-typescript": "^8.3.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/chrome": "0.0.210",
		"@types/firefox-webext-browser": "^94.0.1",
		"@types/throttle-debounce": "^5.0.0",
		"ava": "^5.1.1",
		"dom-form-serializer": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.63.0",
		"rollup-plugin-prettier": "^2.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"sinon": "^15.0.1",
		"sinon-chrome": "^3.0.1",
		"throttle-debounce": "^5.0.0",
		"tslib": "^2.5.0",
		"type-fest": "^3.5.3",
		"typescript": "^4.9.4",
		"webext-detect-page": "^4.0.1",
		"webext-polyfill-kinda": "^0.10.0",
		"xo": "^0.53.1"
	}
}
