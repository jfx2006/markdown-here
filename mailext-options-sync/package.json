{
  "name": "@jfx2006/mailext-options-sync",
  "version": "4.2.4",
  "description": "Helps you manage and autosave your extension's options.",
  "keywords": [
    "extension",
    "mailext",
    "options",
    "sync",
    "thunderbird",
    "webext"
  ],
  "private": true,
  "repository": "jfx2006/mailext-options-sync",
  "license": "MIT",
  "author": "JFX",
  "contributors": [
    "Federico Brigante <me@fregante.com> (https://fregante.com)"
  ],
  "type": "module",
  "main": "index.js",
  "types": "./index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "run-p build ava xo",
    "watch": "rollup -c --watch",
    "ava": "ava",
    "xo": "xo"
  },
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ],
    "ignores": [
      "mail-ext-types.d.ts",
      "mailext-options-sync.js"
    ],
    "rules": {
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-dynamic-delete": "off",
      "@typescript-eslint/no-empty-function": "off",
      "no-await-in-loop": "off"
    }
  },
  "ava": {
    "require": [
      "./test/_env.js"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@sindresorhus/tsconfig": "^6.0.0",
    "@types/chrome": "0.0.275",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/throttle-debounce": "^5.0.2",
    "ava": "^6.1.3",
    "dom-form-serializer": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.24.0",
    "rollup-plugin-prettier": "^4.1.1",
    "sinon": "^19.0.2",
    "sinon-chrome": "^3.0.1",
    "throttle-debounce": "^5.0.2",
    "tslib": "^2.7.0",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2",
    "webext-detect": "^5.1.0",
    "webext-events": "^3.0.1",
    "xo": "^0.59.3"
  },
  "engines": {
    "node": ">=18"
  }
}
