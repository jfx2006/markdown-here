{
  "name": "markdown-here-revival",
  "version": "3.5.0",
  "description": "Markdown emails for Mozilla Thunderbird",
  "scripts": {
    "build": "web-ext build",
    "lint": "eslint .",
    "test91": "web-ext run --verbose -f thunderbird91 -p mdhr_test_profiles/testing91",
    "test102": "web-ext run --verbose -p mdhr_test_profiles/testing102",
    "testbeta": "web-ext run --verbose -f thunderbird-beta --keep-profile-changes",
    "testdaily": "web-ext run --verbose -p mdhr_test_profiles/testingdaily -f thunderbird-daily"
  },
  "private": true,
  "author": "JFX",
  "license": "MIT",
  "devDependencies": {
    "eslint": "8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "web-ext": "^7.5.0"
  }
}
